<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="-10dp"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/imageViewMain2"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:layout_marginTop="4dp"
        android:background="@color/backgroundLogin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <ImageButton
        android:id="@+id/imgbback"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="25dp"
        android:background="@null"
        android:src="@drawable/iconback"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:background="#ffffff"
        android:elevation="10dp"
        android:translationZ="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewMain2"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints">

        <RatingBar

            android:id="@+id/ratingbarmain2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:numStars="5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/robotomedium"
            android:text="4.5/5"
            android:textColor="#000000"
            android:textSize="23sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/ratingbarmain2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/ratingbarmain2"
            app:layout_constraintTop_toBottomOf="@+id/ratingbarmain2" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="DA NANG"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/ratingbarmain2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgLocal"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/local"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtName" />

        <TextView
            android:id="@+id/txtLocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="address"
            android:textColor="#000000"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@+id/imgLocal"
            app:layout_constraintLeft_toRightOf="@+id/imgLocal"
            app:layout_constraintTop_toTopOf="@+id/imgLocal" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMain2"
        android:elevation="10dp"
        android:background="@color/abcxyz"
        android:translationZ="5dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >
    <LinearLayout
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:id="@+id/linear"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"

       >

        <TextView
            android:padding="10dp"
            android:id="@+id/txtOverview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/bgfragment"

            android:fontFamily="@font/robotomedium"
            android:text="Overview"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView

            android:padding="10dp"


            android:fontFamily="@font/robotomedium"
            android:id="@+id/txtGallary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Gallary"
            android:textSize="18sp" />

        <TextView
            android:padding="10dp"

            android:fontFamily="@font/robotomedium"
            android:id="@+id/txtReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Review"
            android:textSize="18sp" />

        <TextView
            android:padding="10dp"

            android:fontFamily="@font/robotomedium"
            android:id="@+id/txtMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="More"
            android:textSize="18sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_marginTop="5dp"
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1.03"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>